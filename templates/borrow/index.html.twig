{% extends 'base.html.twig' %}

{% block title %}Emprunter{% endblock %}

{% block body %}
    <h1>Emprunter cet objet ?</h1>
    {{dump(objet)}}
    
    <div class="row">
            <div class="card m-3 col-md-5 col-lg-3 col-xl-3">
                <a href="/objet/{{objet.id}}"><img class="card-img-top" src="../uploads/{{objet.thumbnail}}" alt="{{objet.name}}">
                <div class="card-body">
                    <h2 class="card-title">{{objet.name}}</h2></a>
                    <p class="card-text">{{objet.description}}</p>
                    <small> {{objet.category.name }} ({{objet.category.points}}pts) </small>
                </div>
            </div>
        </div>

    <div class="row">
        {{form(formulaire)}}
    </div>

{% endblock %}
