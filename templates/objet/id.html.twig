{% extends 'base.html.twig' %}

{% block title %}Les objets disponibles{% endblock %}

{% block body %}

    <section class="container">
        <h1>Les objets disponibles imm√©diatement:</h1>
            <div class="row">
                <div class="card text-center col-xl-8 offset-xl-2">
                    <div class="card-header">
                    <h2>{{objet.name}}</h2>
                    </div>
                    <div class="card-body">
                        <img class="card-img-top" src="{{ asset("uploads/" ~ objet.thumbnail) }}" alt="{{objet.name}}">
                        <p class="card-text">{{objet.description}}</p>
                        {% if app.user %}
                            <a href="/borrow/{{objet.id}}" class="btn btn-primary">Emprunter</a>
                        {% endif %}
                    </div>
                    <div class="card-footer text-body-secondary">
                        Disponible ou non ?
                    </div>
                </div>
            </div>
    </section>
{% endblock %}
